<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">

            <solid android:color="@color/white" />
            <size
                android:width="50dp"
                android:height="50dp" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">

            <solid android:color="@color/dialogColor" />
            <size
                android:width="50dp"
                android:height="50dp" />
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:drawable="@drawable/ic_info_gray"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />

</layer-list>